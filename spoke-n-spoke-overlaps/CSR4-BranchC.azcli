#
# Create Branch C VNet
#
az group create --name BranchC --location "WestUS2"
az network vnet create --name BranchC --resource-group BranchC --address-prefix 10.0.0.0/16
az network vnet subnet create --address-prefix 10.0.1.0/24 --name InsideSubnet --resource-group BranchC --vnet-name BranchC 
az network vnet subnet create --address-prefix 10.0.0.0/24 --name OutsideSubnet --resource-group BranchC --vnet-name BranchC
az network vnet subnet create --address-prefix 10.0.10.0/24 --name testVMSubnet --resource-group BranchC --vnet-name BranchC

#
# NSG
#
az network nsg create --resource-group BranchC --name BranchC-CSR-NSG --location WestUS2
az network nsg rule create --resource-group BranchC --nsg-name BranchC-CSR-NSG --name CSR-IPSEC1 --access Allow --protocol Udp --direction Inbound --priority 100 --source-address-prefix "*" --source-port-range "*" --destination-address-prefix "*" --destination-port-range 500
az network nsg rule create --resource-group BranchC --nsg-name BranchC-CSR-NSG --name CSR-IPSEC2 --access Allow --protocol Udp --direction Inbound --priority 110 --source-address-prefix "*" --source-port-range "*" --destination-address-prefix "*" --destination-port-range 4500
az network nsg rule create --resource-group BranchC --nsg-name BranchC-CSR-NSG --name Allow-SSH-All --access Allow --protocol Tcp --direction Inbound --priority 120 --source-address-prefix Internet --source-port-range "*" --destination-address-prefix "*" --destination-port-range 22
az network nsg rule create --resource-group BranchC --nsg-name BranchC-CSR-NSG --name Allow-Tens --access Allow --protocol "*" --direction Inbound --priority 130 --source-address-prefix 10.0.0.0/8 --source-port-range "*" --destination-address-prefix "*" --destination-port-range "*"
az network nsg rule create --resource-group BranchC --nsg-name BranchC-CSR-NSG --name Allow-192 --access Allow --protocol "*" --direction Inbound --priority 135 --source-address-prefix 192.168.0.0/16 --source-port-range "*" --destination-address-prefix "*" --destination-port-range "*"
az network nsg rule create --resource-group BranchC --nsg-name BranchC-CSR-NSG --name Allow-1 --access Allow --protocol "*" --direction Inbound --priority 136 --source-address-prefix 1.1.1.1/32 --source-port-range "*" --destination-address-prefix "*" --destination-port-range "*"
az network nsg rule create --resource-group BranchC --nsg-name BranchC-CSR-NSG --name Allow-2 --access Allow --protocol "*" --direction Inbound --priority 137 --source-address-prefix 2.2.2.2/32 --source-port-range "*" --destination-address-prefix "*" --destination-port-range "*"
az network nsg rule create --resource-group BranchC --nsg-name BranchC-CSR-NSG --name Allow-3 --access Allow --protocol "*" --direction Inbound --priority 138 --source-address-prefix 3.3.3.3/32 --source-port-range "*" --destination-address-prefix "*" --destination-port-range "*"
az network nsg rule create --resource-group BranchC --nsg-name BranchC-CSR-NSG --name Allow-4 --access Allow --protocol "*" --direction Inbound --priority 139 --source-address-prefix 4.4.4.4/32 --source-port-range "*" --destination-address-prefix "*" --destination-port-range "*"
az network nsg rule create --resource-group BranchC --nsg-name BranchC-CSR-NSG --name Allow-Out --access Allow --protocol "*" --direction Outbound --priority 140 --source-address-prefix "*" --source-port-range "*" --destination-address-prefix "*" --destination-port-range "*"

#
# CSR4 in Branch C
#
az network public-ip create --name CSR4PublicIP --resource-group BranchC --idle-timeout 30 --allocation-method Static --sku standard
az network nic create --name CSR4OutsideInterface -g BranchC --subnet OutsideSubnet --vnet BranchC --public-ip-address CSR4PublicIP --private-ip-address 10.0.0.5 --ip-forwarding true --network-security-group BranchC-CSR-NSG
az network nic create --name CSR4InsideInterface -g BranchC --subnet InsideSubnet --vnet BranchC --ip-forwarding true --private-ip-address 10.0.1.5 --network-security-group BranchC-CSR-NSG
az vm create --resource-group BranchC --location WestUS2 --name CSR4-BranchC --size Standard_DS3_v2 --nics CSR4OutsideInterface CSR4InsideInterface --image cisco:cisco-csr-1000v:16_10-byol:16.10.120190108 --admin-username azureuser --admin-password Msft123Msft123 --no-wait

#
# Branch C VM
#
az network nsg create --resource-group BranchC --name BranchC-VM-NSG --location WestUS2
az network nsg rule create --resource-group BranchC --nsg-name BranchC-VM-NSG --name Allow-SSH-All --access Allow --protocol Tcp --direction Inbound --priority 120 --source-address-prefix Internet --source-port-range "*" --destination-address-prefix "*" --destination-port-range 22
az network nsg rule create --resource-group BranchC --nsg-name BranchC-VM-NSG --name Allow-Tens --access Allow --protocol "*" --direction Inbound --priority 130 --source-address-prefix 10.0.0.0/8 --source-port-range "*" --destination-address-prefix "*" --destination-port-range "*"
az network public-ip create --name BranchCVMPubIP --resource-group BranchC --location WestUS2 --allocation-method Dynamic
az network nic create --resource-group BranchC -n BranchCVMNIC --location WestUS2 --subnet testVMSubnet --private-ip-address 10.0.10.10 --vnet-name BranchC --public-ip-address BranchCVMPubIP --network-security-group BranchC-VM-NSG --ip-forwarding true
az vm create -n BranchCVM -g BranchC --image UbuntuLTS --admin-username azureuser --admin-password Msft123Msft123 --nics BranchCVMNIC --no-wait

#
# UDR pointing next hop to CSR4
#
az network route-table create --name vm-rt --resource-group BranchC
az network route-table route create --name vm-rt --resource-group BranchC --route-table-name vm-rt --address-prefix 0.0.0.0/0 --next-hop-type VirtualAppliance --next-hop-ip-address 10.0.1.5
# Replace the public IP with yours
az network route-table route create --name myip --resource-group BranchC --route-table-name vm-rt --address-prefix 47.149.132.181/32 --next-hop-type Internet
az network vnet subnet update --name testVMSubnet --vnet-name BranchC --resource-group BranchC --route-table vm-rt

#
# Show public IPs
#
az network public-ip show -g BranchC -n CSR4PublicIP --query "{address: ipAddress}"
az network public-ip show -g BranchC -n BranchCVMPubIP --query "{address: ipAddress}"
